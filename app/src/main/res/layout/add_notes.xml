<?xml version="1.0" encoding="utf-8"?><?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#152332">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:navigationIcon="@drawable/ic_back"
        app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Title Input -->
    <EditText
        android:id="@+id/title_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/areainput"
        android:hint="Title"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#B0BEC5"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintMarginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <!-- Notes Input -->
    <EditText
        android:id="@+id/notes_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/areainput"
        android:hint="Notes..."
        android:minHeight="100dp"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#B0BEC5"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintMarginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_input" />

    <!-- Last Changed -->
    <TextView
        android:id="@+id/last_changed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Changed : Mar 22, 2025 at 2.00AM"
        android:textColor="#B0BEC5"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/notes_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintMarginTop="12dp"/>

    <!-- Bottom Bar -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintMarginBottom="16dp">

        <!-- Image Button -->
        <ImageView
            android:id="@+id/image_button"
            android:layout_width="35dp"
            android:layout_height="39dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_image"
            app:tint="#FFFFFF" />

        <!-- Camera Button -->
        <ImageView
            android:id="@+id/camera_button"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_camera"
            app:tint="#FFFFFF" />

        <!-- Created Date -->
        <TextView
            android:id="@+id/created_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created: Mar 22, 2025"
            android:textColor="#B0BEC5"
            android:textSize="12sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
